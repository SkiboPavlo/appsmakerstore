<p id="notice"><%= notice %></p>

<h1>Exchange Rates</h1>

<table>
  <thead>
    <tr>
      <th>Period</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exchange_rates.each do |exchange_rate| %>
      <tr>
        <td><%= exchange_rate.period %></td>
        <td><%= exchange_rate.unit %></td>
        <td><%= link_to 'Show', exchange_rate %></td>
        <td><%= link_to 'Edit', edit_exchange_rate_path(exchange_rate) %></td>
        <td><%= link_to 'Destroy', exchange_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exchange Rate', new_exchange_rate_path %>
<%= link_to 'Fetch', save_exchange_rates_path %>

